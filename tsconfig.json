{
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    ".github/actions/**/*.js",
    ".github/actions/**/*.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist/typescript",
    "newLine": "lf",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ]
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ESNext"
    }
  }
}