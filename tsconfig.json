{
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist/ts",
    "newLine": "lf",
    "declaration": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "lib": [
      "esnext"
    ]
  },
}