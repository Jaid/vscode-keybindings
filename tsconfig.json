{
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    ".github/actions/**/*.js",
    ".github/actions/**/*.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist/typescript",
    "newLine": "lf",
    "declaration": true,
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "lib": [
      "ESNext"
    ]
  },
  "ts-node": {
    "esm": true,
    "swc": true,
    "preferTsExts": true
  }
}