{
  "extends": "tsconfig-jaid/base",
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "lib/*": [
        "./src/lib/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "esm": true,
    "compilerOptions": {
      "composite": true,
      "baseUrl": ".",
      "paths": {
        "lib/*": [
          "./src/lib/*"
        ]
      }
    }
  }
}